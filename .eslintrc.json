{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "globals": {
    "ns": "readonly",
    "document": "readonly",
    "window": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-await-in-loop": "off",
    "no-constant-condition": "off",
    "no-undef": "warn",
    "no-empty": "warn"
  }
}
